{
  "name": "marusya-types",
  "description": "Types for Mail.ru Marusya",
  "version": "1.0.3",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "init": "git config core.hooksPath ./.hooks",
    "lint": "eslint --ext .ts ./src",
    "build": "rm -rf dist && tsc",
    "release": "npm run lint && npm run build && npm version $VER && npm publish && git push --follow-tags --no-verify",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint --ext .ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "lint-staged": "^12.1.2",
    "typescript": "^4.5.2"
  },
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/marusya-types.git"
  },
  "license": "MIT"
}
